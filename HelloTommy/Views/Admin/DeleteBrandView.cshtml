@model List<Brand>
@{
    ViewData["Title"] = "Admin - Delete Brand";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/admin-sub.css")" />
}


<div class="form-container">
    <form id="contact" method="POST">
        <h1>Delete a brand</h1>
        <h4>Super secret admin site</h4>
        <fieldset>
            <label for="Name"></label>
            <input type="number" id="id" placeholder="Brand ID goes brrr" name="id" />
        </fieldset>
        <fieldset>
            <input type="submit" value="Send" name="submit" id="brand-submit" data-submit="...Sending">
        </fieldset>
    </form>

    <div class="brand-list-container">
        <ul>
            @foreach (var brand in @Model)
            {
                <li>Brand: @brand.Name   Id: @brand.Id </li>
            }
        </ul>
    </div>
</div>