@model hiTommy.Data.ViewModels.AdminViewModel
@{
    ViewData["Title"] = "Admin - Delete Brand";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/admin-sub.css")" />
}


<div class="form-container">
    <form id="contact" method="POST">
        <h1>Delete a brand</h1>
        <h4>Super secret admin site</h4>
        <input  asp-for="Brand.Id" placeholder="Brand ID goes brrr" name="id" />
        <input type="submit" value="Send" name="submit" id="brand-submit">
    </form>

    <div class="brand-list-container">
        <ul>
            @foreach (var brand in @Model.Brands)
            {
                <li>Brand: @brand.Name   Id: @brand.Id </li>
            }
        </ul>
    </div>
</div>