@model hiTommy.Data.ViewModels.AdminViewModel

@{
    ViewData["Title"] = "Admin - Add Brand";
}

@section Styles{
    <link rel="stylesheet" href="@Url.Content("~/css/admin-sub.css")" />
}


<div class="form-container">
    <form asp-action="AddBrandView" id="contact" method="POST">
        <h1>Add a new brand</h1>
        <h4>Super secret admin site</h4>
        <fieldset>
            <input asp-for="Brand.Name" placeholder="Brand name goes brrr" />
        </fieldset>
        <fieldset>
            <input type="submit" value="Send" name="submit" id="contact-submit" data-submit="...Sending">
        </fieldset>
    </form>

    <div class="brand-list-container">
        <ul>
            @foreach (var brand in Model.Brands)
            {
                <li>Brand: @brand.Name   Id: @brand.Id </li>
            }
        </ul>
    </div>
</div>

